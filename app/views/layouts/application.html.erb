<!DOCTYPE html>
<html>
<head>
  <title>FosterPals</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_user %>
    <script>
      if ("<%= current_user.org_name %>" ) {
        var name = "<%= current_user.org_name %>";
      } else {
        var name = "<%= current_user.first_name %>";
      }
      var id = <%= current_user.id %>;
      window.CURRENT_USER = name;
      window.CURRENT_USER_ID = id;
    </script>
  <% end %>

<%= yield %>

</body>
</html>
