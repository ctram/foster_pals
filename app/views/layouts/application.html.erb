<!DOCTYPE html>
<html>
  <head>
    <title>FosterPals</title>
    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>
    <%= csrf_meta_tags %>
    <link href='http://fonts.googleapis.com/css?family=Inconsolata:400' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:700' rel='stylesheet' type='text/css'>
    <script src="http://widget.cloudinary.com/global/all.js" type="text/javascript" charset="utf-8"></script>
    <script type="text/javascript" charset="utf-8">
      window.CLOUDINARY_OPTIONS = {
        cloud_name: "<%=ENV['CLOUD_NAME']%>",
        upload_preset: "<%= ENV['UPLOAD_PRESET'] %>"
      };
    </script>

    <script type="text/javascript"
      src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>">
    </script>

  </head>
  <body>
    <% if current_user %>
      <script>
        if ("<%= current_user.org_name %>" !== 'NOT_ORG' ) {
          var name = "<%= current_user.org_name %>";
        } else {
          var name = "<%= current_user.first_name %>";
        }
        var id = <%= current_user.id %>;
        var role = "<%= current_user.role %>";

        window.CURRENT_USER = name;
        window.CURRENT_USER_ID = id;
        window.CURRENT_USER_ROLE = role; // TODO: Don't think this is used anymore; remove.
      </script>
    <% end %>

    <%= yield %>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-65286834-1', 'auto');
      ga('send', 'pageview');

    </script>
  </body>
  <%= render "shared/footer" %>
</html>
