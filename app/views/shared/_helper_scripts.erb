    <% if current_user %>
      <script>
        if ("<%= current_user.org_name %>" !== 'NOT_ORG' ) {
          var name = "<%= current_user.org_name %>";
        } else {
          var name = "<%= current_user.first_name %>";
        }
        var id = <%= current_user.id %>;
        var role = "<%= current_user.role %>";

        window.CURRENT_USER = name;
        window.CURRENT_USER_ID = id;
        window.CURRENT_USER_ROLE = role; // TODO: Don't think this is used anymore; remove.
      </script>
    <% end %>