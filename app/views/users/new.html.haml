.static-page-content.page-register.pt-5
  %h1.text-center
    Register

  .row.justify-content-center
    .col-xl-6
      %form.p-5{action: "#{users_url}", method: "POST" }
        %input{type:"hidden", name:"authenticity_token", value:" form_authenticity_token"}
        
        .fosterer-or-organization.mb-5
          %div.form-check
            %input.form-check-input{ type: "radio", name: "user[role]", id: "org-radio-btn", value: "org", checked: true }
            %label.form-check-label{ for: "org-radio-btn" }
              Rescue Organization

          %div.form-check
            %input.form-check-input{ type: "radio", name: "user[role]", id: "fosterer-radio-btn", value: "fosterer" }
            %label.form-check-label{ for: "fosterer-radio-btn"}
              Fosterer

        .form-group
          %label{ for: "email-input" } 
            Email
          %input{type:"email", class:"form-control", placeholder:"Email", name: "user[email]", id:"email-input", required: true}

        .form-group
          %label{ for: "password-input" } 
            Password
          %input{type:"password", class:"form-control", placeholder:"Password", name: "user[password]", id: "password-input", required: true}

        %fieldset.org-name
          .form-group
            %label{ for: "org-name-input" } 
              Organization Name
            %input{type:"text", class:"form-control", placeholder:"Organization Name", name: "user[org_name]", id:"org-name-input", required: true}

        .form-group.non-org-name.d-none
          %label{ for: "first-name-input" } 
            First Name
          %input{type:"text", class:"form-control", placeholder:"First Name", name: "user[first_name]", id: "first-name-input"}

        .form-group.non-org-name.d-none
          %label{ for: "last-name-input" } 
            Last Name
          %input{type:"text", class:"form-control", placeholder:"Last Name", name: "user[last_name]", id: "last-name-input"}

        .form-group
          %label{ for: "street-address-input" } 
            Street
