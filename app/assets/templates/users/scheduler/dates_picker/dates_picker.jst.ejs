<h2 class="mb-3">
    Request a Stay with
    <strong>
        <%= fosterer.escape('name')%>
    </strong>
</h2>

<hr />

<h3 class="mb-3">Select Animals for this Stay</h3>
<div class="animal-roster-hook mb-3" />

<div class="chosen-animals-container p-3 mb-3">
    <h3 class="mb-5 chosen-animals-heading">Animals for this Reservation</h3>
    <div class="no-animals-text">
        No animals added yet.
    </div>
    <div class="chosen-animals-hook mb-3" />
</div>

<div class="my-3 ml-3">
    <div class="check-in-group">
        <h3>Check-in</h3>
        <div class="row">
            <div class="col-2">
                <div class="form-group">
                    <input type="date" class="form-control" id="check-in" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar" />
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-check my-3">
        <input class="form-check-input" type="checkbox" value="" id="indefinite-stay-checkbox" />
        <label class="form-check-label" for="indefinite-stay-checkbox">
            Indefinite Stay
        </label>
    </div>
    <div class="check-out-group">
        <h3>Check-out</h3>
        <div class="row">
            <div class="col-2">
                <div class="form-group">
                    <input type="date" class="form-control" id="check-out" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar" />
                    </span>
                </div>
            </div>
        </div>
    </div>
    <button class="btn btn-primary" id="check-aval-btn" disabled>Check Availability</button>
</div>