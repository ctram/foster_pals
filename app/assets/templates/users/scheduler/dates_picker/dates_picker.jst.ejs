<h2>
    Request a Stay with a
    <%= fosterer.escape('name')%>!
</h2>

<hr />

<h3>Select Animals for this Stay</h3>
<div class="animal-roster-hook" />

<h3>Animals for this Reservation</h3>
<div class="chosen-animals-hook" />

<h3>Check-in</h3>
<div class="row">
    <div class="col-6">
        <div class="form-group">
            <div class="input-group date" id="check-in">
                <input type="text" class="form-control" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar" />
                </span>
            </div>
        </div>
    </div>
</div>

<div class="check-out-group">
    <h3>Check-out</h3>
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <div class="input-group date" id="check-out">
                    <input type="text" class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar" />
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<button class="btn btn-primary" id="check-aval-btn">Check Availability</button>

<script type="text/javascript">
    $(function () {
        $("#check-in").datetimepicker({
            format: "MM/DD/YYYY"
        });
        $("#check-out").datetimepicker({
            format: "MM/DD/YYYY"
        });
    });
</script>