<% if (CURRENT_USER_ID !== parseInt(user.escape('id'))) { %>
  <button class='btn btn-primary'>
    <% if (user.escape('role') === 'fosterer') { %>
      Contact Fosterer
    <% } else { %>
      Contact Rescue Organization
    <% } %>
  </button>

  <button class='btn btn-primary schedule-btn' data-user-id= <%= user.escape('id')%> >
    Schedule a Stay for an Animal
  </button>
<% } else { %>
  <button class='btn btn-primary edit-profile-btn'>
    Edit Profile
  </button>
<% } %>
