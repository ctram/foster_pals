<div class='col-md-2 animal-img'>
  <img src="<%= animal.escape('main_image_thumb_url') %>" alt="" />
</div>


<div class='col-md-1 animal-name' data-animal-id=<%= animal.escape('id')%> >
  <%= animal.escape('name') %>
</div>

<div class='col-md-1 animal-species'>
  <%= animal.escape('species') %>
</div>

<div class='col-md-1 animal-breed'>
  <%= animal.escape('breed') %>
</div>

<div class='col-md-1 animal-color'>
  <%= animal.escape('color') %>
</div>

<div class='col-md-1 animal-sex'>
  <%= animal.escape('sex') %>
</div>

<div class='col-md-1 animal-weight'>
  <%= animal.escape('weight') %>
</div>

<div class='col-md-1 animal-status'>
  <%= animal.escape('status') %>
</div>

<% if (stay.escape('status' === '')) { %>
  <div class='col-md-1 stay-status'>
    No Reservations Made
  </div>
<% } else { %>
  <div class='col-md-1 stay-status'>
    <%= stay.escape('status') %>
  </div>
<% } %>


</div>

<div class='col-md-1 animal-fosterer'>
  <% if (animal.escape('fosterer_id') === '') { %>
      Not Fostered
  <% } else { %>
    <%= fosterer.escape('first_name') %>
  <% } %>
</div>

