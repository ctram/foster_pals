<div class="row py-5">
  <div class="col-2 text-right">
    <img class="img-fluid animal-img" src="<%= animal.escape('main_image_thumb_url') %>" alt="Animal" />
  </div>
  <div class="col-10">
    <div class="d-flex flex-column">
      <div class="animal-stats row">
        <div class="col-2 animal-name" data-animal-id="<%= animal.escape('id') %>">
          <div>
            <u>Name</u>
          </div>
          <div>
            <%= animal.escape("name") %>
          </div>
        </div>
        <div class="col-2 animal-species">
          <div>
            <u>Species</u>
          </div>
          <div>
            <%= animal.escape("species") %>
          </div>
        </div>
        <div class="col-2 animal-breed">
          <div>
            <u>Breed</u>
          </div>
          <div>
            <%= animal.escape("breed") %>
          </div>
        </div>
        <div class="col-2 animal-color">
          <div>
            <u>Color</u>
          </div>
          <div>
            <%= animal.escape("color") %>
          </div>
        </div>
        <div class="col-1 animal-sex">
          <div>
            <u>Sex</u>
          </div>
          <div>
            <%= animal.escape("sex") %>
          </div>
        </div>
        <div class="col-1 animal-weight">
          <div>
            <u>Weight</u>
          </div>
          <div>
            <%= animal.escape("weight") %>
          </div>
        </div>
        <div class="col-2 animal-fosterer">
          <% if (animal.escape("fosterer_id") === "") { %>
            Not Fostered
            <% } else { %>
              <%= fosterer.escape("first_name") %>
                <% } %>
        </div>
      </div>
      <div class="animal-reservations mt-5">
        <div class="animal-item-stays">
          <% if (stays.length === 0) { %>
            <strong class="brand-color">Pet has no reservations.</strong>
            <% } else { %>
              <h5 class="reservations-header">
                Reservations
              </h5>
              <div class="row">
                <div class="col-2 ">
                  <u>Fosterer</u>
                </div>
                <div class="col-2 ">
                  <u>Reservation Status</u>
                </div>
                <div class="col-2 ">
                  <u>Check In Date</u>
                </div>
                <div class="col-2 ">
                  <u>Check Out Date</u>
                </div>
              </div>

              <% for (var i = 0; i < stays.length; i++) { %>
                <% var stay = stays[i] %>
                  <div class="row stays-header">
                    <div class="col-2 ">
                      <%= stay.fosterer.first_name %>
                    </div>
                    <div class="col-2 ">
                      <%= stay.status %>
                    </div>
                    <div class="col-2 ">
                      <%= stay.check_in_date %>
                    </div>
                    <div class="col-2 ">
                      <%= stay.check_out_date %>
                    </div>
                  </div>
        </div>
        <% } %>
          <% } %>
      </div>
    </div>
  </div>
</div>