<div id="add-animal">
  <div class="errors-hook" />
  <div class="row justify-content-center">
    <div class="col-6">
      <form class="add-animal-form">
        <input type="hidden" name="animal[org_id]" value="<%= CURRENT_USER_ID %>">
        <input type="hidden" name="animal[status]" value="rescued">

        <div class="form-group image-list" />

        <div class="form-group">
          <input type="text" class="form-control" placeholder="Name" name="animal[name]" />
        </div>

        <div class="form-group">
          <input type="text" class="form-control" placeholder="Species" name="animal[species]" />
        </div>

        <div class="form-check">
          <input class="form-check-input" type="radio" name="animal[sex]" id="radio-male" value="m" checked>
          <label class="form-check-label" for="radio-male">
            Male
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="animal[sex]" id="radio-female" value="f">
          <label class="form-check-label" for="radio-female">
            Female
          </label>
        </div>

        <div class="form-group">
          <input type="text" class="form-control" placeholder="Breed" name="animal[breed]" />
        </div>

        <div class="form-group">
          <input type="text" class="form-control" placeholder="Color" name="animal[color]" />
        </div>

        <div class="form-group">
          <input type="number" class="form-control weight-input" placeholder="Weight in Pounds" name="animal[weight]" min="1" max="500" />
        </div>

        <button class="btn btn-primary add-animal-btn">Add Animal to Roster</button>
        <button class="btn btn-secondary add-image-btn" id="add-image-btn">
          Upload Image
        </button>
      </form>
    </div>
  </div>
</div>