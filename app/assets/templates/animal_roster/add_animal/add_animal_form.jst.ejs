<div id="add-animal">
  <div class="row justify-content-center">
    <div class="col-6">
      <form id="add-animal-form" >
        <input type="hidden" name="animal[org_id]" value="<%= CURRENT_USER_ID %>">
        <input type="hidden" name="animal[status]" value="rescued">
        
        <div class="row mb-3">
          <div class="col-2">
            <button class="btn btn-secondary add-image-btn" id="add-image-btn">
              Upload Images
            </button>
          </div>
          <div class="col-10 image-list" />
        </div>

        <div class="form-group">
          <input type="text" class="form-control" placeholder="Name" name="animal[name]" required />
        </div>

        <div class="form-group">
          <input type="text" class="form-control" placeholder="Species" name="animal[species]" required />
        </div>

        <div class="form-check">
          <input class="form-check-input" type="radio" name="animal[sex]" id="radio-male" value="m" checked required />
          <label class="form-check-label" for="radio-male">
            Male
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="animal[sex]" id="radio-female" value="f" required />
          <label class="form-check-label" for="radio-female">
            Female
          </label>
        </div>

        <div class="form-group">
          <input type="text" class="form-control" placeholder="Breed" name="animal[breed]" required />
        </div>

        <div class="form-group">
          <input type="text" class="form-control" placeholder="Color" name="animal[color]" required />
        </div>

        <div class="form-group">
          <input type="number" class="form-control weight-input" placeholder="Weight in Pounds" name="animal[weight]" min="1" max="500" required />
        </div>

        <button class="btn btn-primary add-animal-btn" type="submit">Add Animal to Roster</button>
      </form>
    </div>
  </div>
</div>