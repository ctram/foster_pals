<div class='form-horizontal well' id='add-animal'>
  <form class=' form-horizontal add-animal-form'>

      <input type='hidden' name='animal[org_id]' value=<%= CURRENT_USER_ID %>>
      <input type='hidden' name='animal[status]' value='rescued'>

      <%= imageSetId %>

      <div class="form-group">
        <label>
          <input type="text" class="form-control" placeholder="Name" name="animal[name]">
          </input>
        </label>
      </div>

      <div class="form-group">
        <label>
          <input type="text" class="form-control" placeholder="Species" name="animal[species]">
          </input>
        </label>
      </div>

      <label>
        Sex
        <div class="form-group">
          <label>
            <input type='radio' class='form-control' name='animal[sex]' value='m'>Male</input>
          </label>

          <label>
            <input type='radio' class='form-control' name='animal[sex]' value='f'>Female</input>
          </label>
        </div>
      </label>

      <div class="form-group">
        <label>
          <input type="text" class="form-control" placeholder="Breed" name="animal[breed]">
          </input>
        </label>
      </div>

      <div class="form-group">
        <label>
          <input type="text" class="form-control" placeholder="Color" name="animal[color]">
          </input>
        </label>
      </div>

      <div class="form-group">
        <label>
          <input type="number" class="form-control weight-input" placeholder="Weight" name="animal[weight]" min='1' max='500'>
          </input>
        </label>
        <div class="form-group">
      </div>

      <div class="form-group image-list"></div>

      <div class="form-group">
        <button class='btn btn-primary add-image-btn' id='add-image-btn'>Upload Image</button>
        <div class="form-group">
      </div>

      <div class="form-group">
        <button class='btn btn-primary add-animal-btn'>Add Animal to Roster</button>
      <div class="form-group">
  </form>
</div>
