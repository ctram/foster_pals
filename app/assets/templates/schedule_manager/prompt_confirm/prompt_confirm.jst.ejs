<div>
  <% if (confirmed) { %>
    <h3 class="res-confirmation mb-5">
      Reservation Confirmed!
    </h3>
    <button class="btn btn-info rtrn-to-manager">
      Return to Reservation Manager
    </button>
  <% } else { %>
    <div class="mb-5">
      <h3 class="mb-3">Please Confirm This Reservation</h3>

      <div class="row table-header mb-3">
        <div class="col-3">
          Rescue Org
        </div>
        <div class="col-3">
          Check In Date
        </div>
        <div class="col-3">
          Check Out Date
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <%= org.escape("org_name") %>
        </div>
        <div class="col-3">
          <%= stay.escape("check_in_date") %>
        </div>
        <div class="col-3">
          <%= stay.escape("check_out_date") %>
        </div>
      </div>
    </div>

    <% if (overlappingStays.length !== 0) { %>
      <div class="mb-5">
        <h3>The following reservations overlap and will automatically be denied</h3>

        <div class="row table-header">
          <div class="col-3">
            Rescue Org
          </div>
          <div class="col-3">
            Check In Date
          </div>
          <div class="col-3">
            Check Out Date
          </div>
        </div>

        <% for (var i = 0; i < overlappingStays.length; i++) { %>
          <% var otherStay = overlappingStays.models[i] %>
          <div class="row">
            <div class="col-3">
              <%= org.escape("org_name") %>
            </div>
            <div class="col-3">
              <%= otherStay.escape("check_in_date") %>
            </div>
            <div class="col-3">
              <%= otherStay.escape("check_out_date") %>
            </div>
          </div>
        <% } %>
      </div>
    <% } %>

    <div class="confirmation-btns">
      <button class="btn btn-success confirm-stay" data-stay-id="<%= stay.escape('id')%>" >
        Confirm Reservation
      </button>

      <button class="btn btn-info rtrn-to-manager">
        Return to Reservation Manager
      </button>
    </div>
  <% } %>
</div>